<div class = "col-md-3">
  <h2>User info</h2>
  <!--ここにプロフィール画像-->
  <table class = "table">
    <tbody>
      <tr></tr>

      <tr>
        <th>name</th>
        <th><!--ここにユーザー名--></th>
      </tr>
      <tr>
        <th>introduction</th>
        <th><!--ここに紹介文--></th>
      </tr>

      </tbody>
  </table>

  <div class = "row">
    <!--ここに編集へのリンク-->
  </div>

  <h2 class = "mt-3">New book</h2>
  <%= form_with model: @book, local:true do |f| %>

    <div class = "form-group">
      <%= f.label :book_title, 'Title' %>
      <%= f.text_field :book_title, class: 'form_control book_title' %>
    </div>

    <div class = "form-group">
      <%= f.label :book_opinion, 'Opinion' %>
      <%= f.text_area :book_body, class: 'form_control book_body' %>
    </div>

    <div class = "form-group">
      <%= f.submit 'Create Book' %>
    </div>

  <% end %>


</div>